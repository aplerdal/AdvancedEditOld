  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="SDL2-CS-master\SDL2-CS.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="nfd.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

